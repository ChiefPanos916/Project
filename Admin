       }   
    public void getAdInfo(){
        System.out.println("");
        System.out.println("Welcome Admin!");
        System.out.println("");
        System.out.println("Name: " + this.AdminName);
        System.out.println("Phone Number: " + this.AdminPhone);
    }
    public static void getOptions(){
        System.out.println("");
        System.out.println("1.View Services");
